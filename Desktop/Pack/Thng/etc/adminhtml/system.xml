                <label>Thng page setting</label>
                <field id="is_enable" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Is Enable</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="header_title" translate="label" type="text" sortOrder="1" showInStore="1" showInWebsite="1" showInDefault="1">
                    <label>Header title</label>
                </field>
            </group>
        </section>
